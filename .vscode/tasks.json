{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ios",
            "type": "shell",
            "command": "make ios-build"
        },
        {
            "label": "launch xcode",
            "type": "shell",
            "command": "make launch-xcode"
        },
        {
            "label": "Run create-status-code-csv",
            "type": "process",
            "command": "node",
            "args": [
                "generators/create-status-code-csv.js",
                "${input:spreadSheetId}",
            ],
        },
        {
            "label": "Run create-status-code-ts",
            "type": "process",
            "command": "node",
            "args": [
                "generators/create-status-code-ts.js",
                "${input:spreadSheetId}",
            ],
        },
        {
            "label": "test ios",
            "type": "shell",
            "command": "make ios-tests"
        },
    ],
    "inputs": [
        {
            "id": "spreadSheetId",
            "type": "promptString",
            "description": "Google Spreadsheet „ÅÆID"
        },
    ],
}